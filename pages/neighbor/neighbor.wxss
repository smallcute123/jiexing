/* pages/neighbor/neighbor.wxss */
.map{
  font-size:15px;
  color: rgb(119, 119, 118);
  margin-top: 40rpx;
}
.addr{
  padding: 20rpx;
}
.addre{
  font-size: 31rpx;
  color: rgb(30, 124, 35)
}
.category{
  font-size: 30rpx;
  color:rgb(0, 170, 28)
}
.distance{
  font-size: 28rpx;
  color:#55AA00
}
.news_content{
    margin: 0 auto;
    width:95%;
    border-bottom:1px solid #ccc;
    clear:both;
}
.news_content_left{
    width:75%;
    float: left;
}
.news_content_left_top{
    height:auto;
}
.news_content_left_but{
    font-size: 5px;
    margin-left: 10px;
}
.news_content_left_but .pic{
   width: 17px;
   height: 17px;
   border-radius: 17px;
   margin-right: 5px;
}
.news_content_left_top .text_top{
    padding: 10px;
    font-size:19px;
    line-height: 22px;
    color:#010101;
}
.news_content_right{
  width:25%;
  height:100px;
  float: right;
}
.news_content_right image{
  width:42px;
  height: 40px;
  margin: 20px;
}
.news_content-left{
  float: left;
}
.news_content-right{
  float: right;
}
.line{
  border: 1rpx solid #cccccc;
  opacity: 0.1;
}
.cline{
   border: 2rpx solid #239933;
  opacity: 0.1;
}
